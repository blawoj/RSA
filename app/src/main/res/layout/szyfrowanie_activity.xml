<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context="com.example.ja.rsa.MainActivity">


    <Button
        android:id="@+id/generuj_button"
        android:text="Generuj"
        android:textColor="#D4A039"
        android:textSize="23sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/buttonshapesmall"
        android:shadowColor="#A8A8A8"
        android:shadowDx="5"
        android:shadowDy="0"
        android:shadowRadius="6"
        android:onClick="generuj"
        android:layout_above="@+id/importuj_publ_button"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="7dp" />

    <Button
        android:id="@+id/importuj_publ_button"
        android:text="Importuj"
        android:textColor="#D4A039"
        android:textSize="23sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/buttonshapesmall"
        android:shadowColor="#A8A8A8"
        android:shadowDx="5"
        android:shadowDy="0"
        android:shadowRadius="6"
        android:layout_above="@+id/szyfruj_button"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="7dp"
        android:onClick="importuj_publiczny"/>

    <Button
        android:id="@+id/szyfruj_button"
        android:text="Szyfruj"
        android:textColor="#D4A039"
        android:textSize="23sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/buttonshapesmall"
        android:shadowColor="#A8A8A8"
        android:shadowDx="5"
        android:shadowDy="0"
        android:shadowRadius="6"
        android:onClick="szyfruj"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="5dp" />

    <Button
        android:id="@+id/powrot_button"
        android:text="Powrót"
        android:textColor="#D4A039"
        android:textSize="23sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/buttonshapesmall"
        android:shadowColor="#A8A8A8"
        android:shadowDx="5"
        android:shadowDy="0"
        android:shadowRadius="6"
        android:onClick="powrot"
        android:layout_alignTop="@+id/szyfruj_button"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/kopiuj_button"
        android:text="Kopiuj"
        android:textColor="#D4A039"
        android:textSize="23sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/buttonshapesmall"
        android:shadowColor="#A8A8A8"
        android:shadowDx="5"
        android:shadowDy="0"
        android:shadowRadius="6"
        android:onClick="kopiuj"
        android:layout_below="@+id/generuj_button"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/szyfrowanie_editext"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:inputType="textMultiLine"
        android:hint="Wprowadź tekst do zaszyfrowania"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
